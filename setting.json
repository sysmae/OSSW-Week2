{
  "editor.formatOnSave": true,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "file.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flakeBEnabled": true,
  "python.linting.flakeBArgs": ["--max-line-length=88"],

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.tabWidth": 4,
  "prettier.semi": false,
  "prettier.printWidth": 88
}
